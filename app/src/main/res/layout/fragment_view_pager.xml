<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ViewPagerFragment">

   <com.google.android.material.tabs.TabLayout
       android:id="@+id/tablayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       app:tabIconTint="@color/teal_200"
       app:tabRippleColor="#D64278"
       android:background="@android:color/transparent"
       app:tabSelectedTextColor="#DD2C00"
       android:animateLayoutChanges="true"
       app:tabMode="fixed"
       android:elevation="0dp"
       app:tabMaxWidth="0dp"
       app:tabGravity="fill"
       app:tabIndicatorFullWidth="false"
       app:tabIndicatorAnimationDuration="1200"
       app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
       app:tabTextColor="@color/teal_200"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toTopOf="@id/viewpagerr"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       style="@style/Widget.MaterialComponents.TabLayout"
       />

   <androidx.viewpager2.widget.ViewPager2
       android:id="@+id/viewpagerr"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:background="#EFE094"
       app:layout_constraintTop_toBottomOf="@id/tablayout"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>